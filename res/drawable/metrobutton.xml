<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_enabled="false">
    <shape>
        <solid
            android:color="@color/actionBarColor" />
        <stroke
            android:width="2dp"
            android:color="@android:color/white" />
        <padding
            android:left="5dp"
            android:top="5dp"
            android:right="5dp"
            android:bottom="5dp" />
    </shape>
</item>    
<item android:state_pressed="true">
    <shape>
        <solid
            android:color="@color/royalBlue_p" />
        <stroke
            android:width="2dp"
            android:color="@android:color/white" />
        <padding
            android:left="5dp"
            android:top="5dp"
            android:right="5dp"
            android:bottom="5dp" />
    </shape>
</item>
<item>
    <shape>
        <solid
            android:color="@color/royalBlue" />
        <stroke
            android:width="2dp"
            android:color="@android:color/white" />
        <padding
            android:left="5dp"
            android:top="5dp"
            android:right="5dp"
            android:bottom="5dp" />
    </shape>
</item>
</selector>